<div class="container">
<form class="form-horizontal" {{action 'feedback' model on='submit'}}>
<fieldset>

<!-- Form Name -->
<legend>{{t "nav.feedback"}}</legend>

<!-- Prepended text-->
{{form/input-email modelValue=model.email isValid=isValidEmail autofocus="true"}}

<!-- Button Drop Down -->
<div class="form-group">
  <label class="col-md-4 control-label" for="category">{{snippet/validation-check-success isValid=isValidCategory}}{{t "field.category"}}</label>
  <div class="col-md-8">
    <div class="input-group">
      {{input id="category" name="category" type="text" value=model.category class="form-control" placeholder=(t "sentence.what-is-it-about") required="true"}}
      <div class="input-group-btn">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
          {{t "field.options"}}
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu pull-right">
          <li><a href="#" onclick={{action 'handleOption'}}>{{t "sentence.site-improvements"}}</a></li>
          <li><a href="#" onclick={{action 'handleOption'}}>{{t "sentence.missing-features"}}</a></li>
          <li><a href="#" onclick={{action 'handleOption'}}>{{t "sentence.report-bug"}}</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>

{{form/input-textarea modelValue=model.comment label=(t "field.your-comments") isValid=isValidFreeComment placeHolder=(t "sentence.add-your-suggestions") required="true"}}
{{input id="ip" type="hidden" value=model.ip name="ip"}}
{{input id="languageCode" type="hidden" value=model.languageCode name="languageCode"}}
<!-- Button -->
<div class="form-group">
  <label class="col-md-4 control-label" for="singlebutton"></label>
  <div class="col-md-4">
    <button id="singlebutton" type="submit" name="singlebutton" class="btn btn-primary" disabled={{isDisabled}}>{{t "action.send-your-feedback"}}</button>
  </div>
</div>

</fieldset>
</form>

</div>
