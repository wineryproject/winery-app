    <div class="container">
        <button type="button" {{action "invoice"}} class="btn btn-success">  
            {{t "action.send-invoice"}} <span class="fa fa-envelope">
            </span>
        </button>

        {{!--Print Product grid pdf (fix price): just add number --}} 
        <button type="button" {{action "printInvoice"}} class="btn btn-success">  
            {{t "action.print-invoice"}} <span class="glyphicon glyphicon-print">
            </span>
        </button>
    </div>
</div>
