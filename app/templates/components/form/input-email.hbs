<label class="col-md-4 control-label" for="prependedtext">{{snippet/validation-check-success isValid=isValid}}{{t "field.email"}}{{#if required}}&nbsp;*{{/if}}</label>
<div class="col-md-8">
  <div class="input-group">
    <span class="input-group-addon"><span class="fa fa-envelope"></span></span>
    {{input type="email" 
            autocomplete='email'
            value=modelValue 
            class="form-control" 
            placeholder=(t "sentence.please-add-your-email-address") 
            autofocus=autofocus required="true"}}
  </div>
</div>
