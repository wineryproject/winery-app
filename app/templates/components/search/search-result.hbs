   <div class="col-sm-6"> 
   {{#if (cond result.entity '==' 'winery')}}
     {{card/winery/winery-card-abstract-item perspective='search' wineryWebPath=result.entityWebPath autonomous=true}}
   {{/if}}
   {{#if (cond result.entity '==' 'product')}}
     {{card/wine/wine-card-abstract perspective='search' id=result.entityId productWebPath=result.entityWebPath autonomous=true}}{{!-- potential duplicate --}}
