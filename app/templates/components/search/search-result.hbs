     {{card/region/region-card-abstract perspective='search' regionWebPath=result.entityWebPath autonomous=true}}{{!-- region-card-abstract should be bi (active if autonomous/ passive if data provide) by default passive--}}
   {{/if}}
   {{#if (cond result.entity '==' 'lieu_dit')}}
     {{card/place/place-card-abstract perspective='search' placeWebPath=result.entityWebPath autonomous=true}}
   {{/if}}
   {{#if (cond result.entity '==' 'cepage')}}
     {{card/grape/grape-card-abstract perspective='search' grapeWebPath=result.entityWebPath autonomous=true}}{{!-- region-card-abstract should be bi (active if autonomous/ passive if data provide) by default passive--}}
   {{/if}}
   {{#if (cond result.entity '==' 'ref_appelation')}}
     {{card/appellation/appellation-card-abstract-item perspective='search' appellationWebPath=result.entityWebPath autonomous=true}}{{!-- region-card-abstract should be bi (active if autonomous/ passive if data provide) by default passive--}}
