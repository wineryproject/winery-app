<form class="form-horizontal" {{action 'request' model on='submit'}}>
<fieldset>

<legend>{{t "field.registration"}}</legend>

{{form/form-input isValid=isValidFirstName name='firstName' label=(t "field.first-name") required='true' autofocus='true' modelValue=model.firstName placeHolder=(t "field.first-name")}}

{{form/form-input isValid=isValidLastName name='lastName' label=(t "field.last-name") required='true' modelValue=model.lastName placeHolder=(t "field.last-name")}}

{{form/input-email isValid=isValidEmail modelValue=model.email required='true'}}

{{form/form-input isValid=isValidDomain name='domain' label=(t "field.domain") required='true' modelValue=model.domain placeHolder=(t "field.domain")}}

<!-- Select Basic -->

<div class="form-group">
  <label class="col-md-4 control-label" for="country">{{snippet/validation-check-success isValid=isValidCountry}}{{t "field.country"}}</label>
  <div class="col-md-8">
  {{form/input-country onSelectCountry=(action "selectCountry")}}
  </div>
</div>

<!-- Select Basic -->
<div class="form-group">
  <label class="col-md-4 control-label" for="region">{{snippet/validation-check-success isValid=isValidRegion}}{{t "field.region"}}</label>
  <div class="col-md-8">
    {{form/input-region countryID=selectedCountry.id onSelectRegion=(action "selectRegion")}}
  </div>
</div>

<!-- Select Basic -->
<div class="form-group">
  <label class="col-md-4 control-label" for="lieuDit">{{snippet/validation-check-success isValid=isValidLieuDit}}{{t "field.lieuDit"}}</label>
  <div class="col-md-8">
    {{form/input-lieu-dit regionId=selectedRegion.id onSelectLieuDit=(action "selectLieuDit")}}
  </div>
</div>

<!-- Select Multiple -->
<div class="form-group">
  <label class="col-md-4 control-label" for="cepages">{{snippet/validation-check-success isValid=isValidCepages}}{{t "field.cepages"}}</label>
  <div class="col-md-8">
        {{form/input-grade regionId=selectedRegion.id countryId=selectCountry.id onSelectGrades=(action "selectGrades")}}
  </div>
</div>

<!-- address -->
{{form/form-address model=model}}

<!-- Select Multiple -->
<div class="form-group">
  <label class="col-md-4 control-label" for="language">{{t "field.language-for-description"}}</label>
  <div class="col-md-8">
    {{form/input-language onSelectLanguage=(action "selectLanguage")}}
  </div>
</div>


{{!-- select 2 for select basic & multiple, gmaps, upload image of winery--}}
<!-- Textarea -->
<div class="form-group">
  <label class="col-md-4 control-label" for="freecomment">{{t "field.description"}}</label>
  <div class="col-md-8">     
      {{textarea id="freecomment" name="freecomment" cols="80" rows="6" type="text" value=model.description class="form-control" placeholder=(t "sentence.add-your-domain-description") required="true"}}                
  </div>
</div>

<!-- Button -->
<div class="form-group">
  <label class="col-md-4 control-label" for="singlebutton"></label>
  <div class="col-md-8">
    <button id="singlebutton" type="submit" name="singlebutton" class="btn btn-primary" disabled={{isDisabled}}>{{t "action.request-domain-creation"}}</button>
  </div>
</div>
</fieldset>
</form>
