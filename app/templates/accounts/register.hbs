{{!-- app/templates/accounts/register.hbs --}}
{{#layout/container/layout-account-container perspective="registration"}}
            <div class="tab_menu" style="border-top:0;margin:0 0 35px;font-size:20px">
                <a href="#" class="selected">{{t "action.self-register"}}</a>
                {{#link-to 'accounts.login' }}{{t "action.connection"}}{{/link-to}}
            </div>

            <div class="social-buttons text-center">
              <a href="#" class="btn btn-fb"><i class="fa fa-facebook"></i> Facebook</a>
              <a href="#" class="btn btn-tw"><i class="fa fa-twitter"></i> Twitter</a>
              <a href="#" class="btn btn-gg"><i class="fa fa-google"></i> Google</a>
            </div>
            <br/>

            <div class="form-group">
              {{input id='username' class="form-control" placeholder=(t "field.username") value=username}}
            </div>

            <div class="form-group">
              {{input id='email' class="form-control" placeholder=(t "field.email") value=email}}
            </div>

            <div class="form-group">
              {{input id='password' class="form-control" placeholder=(t "field.password") type='password' value=password}}
            </div>

<div class="form-group">
    {{form/input-language onSelectLanguage=(action "selectLanguage")}}
</div>

              <button type="button" class="btn-block btn btn-lg btn-success" type="submit">{{t "action.sign-up"}}</button>
              {{#if errorMessage}}
                {{!--{{errorMessage}}--}}
                <p><b>{{t "sentence.you-are-not-authorized"}}</b></p>
              {{/if}}

{{/layout/container/layout-account-container}}