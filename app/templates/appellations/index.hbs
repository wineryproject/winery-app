{{snippet/social-network-snippet title=(t "nav.appellations")}}
{{#layout/container/index-layout-container}}
    <div class="row">
        <div class="col-md-12">
            <h1>
                <div class='form-group'>
                    <div class="col-sm-4 w-card-title">
                        {{t "nav.appellations"}}
                        {{snippet/badge-snippet color-class='label-default' value=model.nbToDisplay}}
                    </div>
                    <div class="col-sm-4 col-sm-offset-8 input-group input-group-lg">
                        {{!--TUTO-DDAU-bubble-up-component-to-controller(3-component-parent template)--}}
                        {{search/inner-search-filter 
                            countryFilter=true 
                            grapeFilter=true
                            setCountryFilter="setCountryFilter"
                            setGrapeFilter="setGrapeFilter"
                            countryWebPath=country
                            grapeWebPath=grape
                            colorFilter=true
                            setColorFilter="setColorFilter"
                            color=color
                            perspective="appellations"
                            }}
                        <input 
                            value={{searchFreeText}} 
                            onKeyUp={{action 'handleInnerFilter' value="target.value"}} 
                            type="text" 
                            class="form-control" 
                            autofocus="true" 
                            placeholder={{t "nav.search"}} />
                    </div>
                </div>
            </h1> 
            {{search/inner-search-pager
                perspective="appellations"
                hasFilter=hasFilter 
                hasCountryFilter=hasCountryFilter
                country = country
                hasGrapeFilter=hasGrapeFilter
                grape = grape
                hasColorFilter = hasColorFilter
                color = color
                }}
        </div>
    </div>
    
    <div class="row">
{{#each model.AppelationBadgeOut as |item index|}}
{{#if item.toDisplay}}
        <div class="col-sm-6"> 
{{card/appellation/appellation-card-abstract-item data=item perspective='all'}}
        </div>
{{/if}}
{{/each}}
    </div><!-- End row -->
{{/layout/container/index-layout-container}}